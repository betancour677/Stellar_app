<?xml version="1.0" encoding="utf-8"?>
<!-- activity_main.xml -->
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/agujeronegro"
        android:tooltipText="@string/description_image1"
        android:contentDescription="@string/description_image1"/>

    <ImageView
        android:id="@+id/image2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/aurorapolar"
        android:tooltipText="@string/description_image2"
        android:contentDescription="@string/description_image2"/>

    <ImageView
        android:id="@+id/image3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/nebulosa"
        android:tooltipText="@string/description_image3"
        android:contentDescription="@string/description_image3"/>

    <ImageView
        android:id="@+id/image4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/lluviameteoritos"
        android:tooltipText="@string/description_image4"
        android:contentDescription="imagen 4"/>

</androidx.appcompat.widget.LinearLayoutCompat>
